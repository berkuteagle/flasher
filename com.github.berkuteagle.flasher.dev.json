{
    "id": "com.github.berkuteagle.flasher",
    "add-extensions": {
        "com.github.berkuteagle.flasher.plugin": {
            "version": "1.0",
            "directory": "extensions",
            "add-ld-path": "lib",
            "merge-dirs": "lib/flasher/plugins",
            "subdirectories": true,
            "no-autodownload": true,
            "autodelete": true
        }
    },
    "runtime": "org.gnome.Platform",
    "runtime-version": "43",
    "sdk": "org.gnome.Sdk",
    "command": "flasher",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "libpeas",
            "buildsystem": "meson",
            "config-opts": [
                "-Dlua51=false",
                "-Dpython3=false",
                "-Ddemos=false",
                "-Dglade_catalog=false",
                "-Dbuildtype=debug",
                "-Ddebug=true"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/GNOME/libpeas.git",
                    "tag": "libpeas-1.34.0"
                }
            ]
        },
        {
            "name": "flasher",
            "builddir": true,
            "buildsystem": "meson",
            "sources": []
        }
    ]
}